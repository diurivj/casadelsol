<h2>Hola, administrador!</h2>

<button class="btn waves-effect waves-light " type="submit" name="action">
  <i class="material-icons right"></i>
  <a href="/children/create">Agregar</a>
</button>

<div class="container">
  <div class="section">
    <div class="row">
      <div class="col 12">
        <div class="section">
          {{#each children as |child|}}
          <div class="row">
            <div class="col s12 m6 l4">
              <div class="card">
                <div class="card-image">
                  <img src="{{child.profilePic}}">
                  <a href="/children/detail/{{this._id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">face</i></a>
                </div>
                <div class="card-content">
                  <span class="card-title">{{child.name}}</span>
                </div>
              </div>
            </div>
          </div>

          {{else}}
          <h2>Aún no hay niños.</h2>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

