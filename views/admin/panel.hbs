{{#each children as |child|}}
<div class="row">
    <div class="col s3">
      <div class="card">
        <div class="card-image">
          <img src="{{child.profilePic}}">
          <span class="card-title">{{child.name}}</span>
          <a href="/children/delete/{{this._id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">delete_forever</i></a>
        </div>
        <div class="card-content">
          <a href="/children/detail/{{this._id}}"> <p>Ver detalle</p> </a>
          <a href="/children/addpost/{{this._id}}"> <p>Agregar mensaje</p> </a>
        </div>
      </div>
    </div>
</div>
{{else}}
  <h2>Aún no hay niños.</h2>
{{/each}}

