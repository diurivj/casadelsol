
<h2>Signup</h2>

<div class="row">
    <form class="col s12" action="/auth/signup" method="POST" id="form-container">
      <div class="row">
        <form class="col s12">
          <div class="row">
            {{!-- name/user --}}
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="username" type="text" name="username" class="validate">
              <label for="username">Nombre: </label>
              <span class="helper-text" data-error="wrong" data-success="right">JonSnow</span>
            </div>
            {{!-- email --}}
            <div class="input-field col s6">
              <i class="material-icons prefix">mail</i>
              <input id="email" type="email" name="email" class="validate">
              <label for="email">Email: </label>
              <span class="helper-text" data-error="wrong" data-success="right">example@email.com</span>
            </div>
          </div>
        </form>
      </div>

{{!-- constrase単as --}}
      
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">vpn_key</i>
              <input  id="password" type="password" name="password" class="validate">
              <label for="password">Contrase単a: </label>
              <span class="helper-text" data-error="wrong" data-success="right">Your password</span>
            </div>
