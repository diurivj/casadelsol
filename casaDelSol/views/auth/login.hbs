<h2>Login</h2>

<div class="row">
    <form class="col s12" action="/auth/login" method="POST" id="form-container">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <!-- name/user -->
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" type="text" class="validate">
              <label for="icon_prefix">First Name</label>
            </div>
            <!-- password -->
            <div class="input-field col s6">
              <i class="material-icons prefix">vpn_key</i>
              <input id="email" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
        </form>
      </div>
    </form>
</div>

{{#if message }}
  <div class="error-message">{{ message }}</div>
{{/if}}

<button class="btn waves-effect waves-light pulse" type="submit" name="action">Submit
  <i class="material-icons right">send</i>
</button>

<p class="account-message">
  Todav√≠a no tienes una cuenta?
  <a href="/auth/signup">Signup</a>
</p>